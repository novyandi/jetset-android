<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/am_pager_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/max_height_header" />

    <com.viewpagerindicator.CirclePageIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/am_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/am_pager_data"
        android:layout_marginBottom="20dp"
        android:padding="10dip"
        app:fillColor="@color/white"
        app:pageColor="#abaeb1"
        app:radius="6dp"
        app:strokeColor="@color/white"
        app:strokeWidth="0dp" />
</RelativeLayout>